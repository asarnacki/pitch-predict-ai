---
import "../styles/global.css";
import { ThemeToggle } from "../components/ThemeToggle";
import { UserNav } from "../components/UserNav";
import { LanguageSwitcher } from "../components/LanguageSwitcher";
import { LanguageProviderWrapper } from "../components/LanguageProviderWrapper";

interface Props {
  title?: string;
}

const { title = "PitchPredict AI" } = Astro.props;

// Get user from middleware (set by src/middleware/index.ts)
const user = Astro.locals.user ?? null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      document.documentElement.classList.add("dark");
    </script>
  </head>
  <body>
    <LanguageProviderWrapper client:load>
      <header class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
          <a href="/" class="text-xl sm:text-2xl font-bold tracking-tight" data-testid="nav-logo"> PitchPredict AI </a>
          <div class="flex items-center gap-3 sm:gap-4">
            <UserNav client:load user={user} />
            <LanguageSwitcher client:load />
            <ThemeToggle client:load />
          </div>
        </div>
      </header>
      <div class="pt-16">
        <slot />
      </div>
    </LanguageProviderWrapper>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
